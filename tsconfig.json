{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": "./src",
    "paths": {
      "storybookConfig/*": ["../config/storybook/*"]
    }
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules", "**/*.stories.tsx"]
}
